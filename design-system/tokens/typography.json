{
  "$description": "Typography system with Inter (sans) and JetBrains Mono (mono)",

  "fontFamily": {
    "$type": "fontFamily",
    "$description": "Font family definitions",

    "sans": {
      "$value": ["Inter", "ui-sans-serif", "system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", "Arial", "sans-serif"],
      "$description": "Primary font for body text and UI"
    },
    "mono": {
      "$value": ["JetBrains Mono", "ui-monospace", "SFMono-Regular", "SF Mono", "Menlo", "Consolas", "Liberation Mono", "monospace"],
      "$description": "Monospace font for code"
    }
  },

  "fontSize": {
    "$type": "dimension",
    "$description": "Font size scale (1.25 ratio)",

    "xs": { "$value": "0.75rem", "$description": "12px - Labels, captions" },
    "sm": { "$value": "0.875rem", "$description": "14px - Secondary text" },
    "base": { "$value": "1rem", "$description": "16px - Body text" },
    "lg": { "$value": "1.125rem", "$description": "18px - Emphasized body" },
    "xl": { "$value": "1.25rem", "$description": "20px - H4" },
    "2xl": { "$value": "1.5rem", "$description": "24px - H3" },
    "3xl": { "$value": "1.875rem", "$description": "30px - H2" },
    "4xl": { "$value": "2.25rem", "$description": "36px - H1" },
    "5xl": { "$value": "3rem", "$description": "48px - Display" },
    "6xl": { "$value": "3.75rem", "$description": "60px - Hero" },
    "7xl": { "$value": "4.5rem", "$description": "72px - Large hero" }
  },

  "fontWeight": {
    "$type": "fontWeight",
    "$description": "Font weight scale",

    "normal": { "$value": 400, "$description": "Regular text" },
    "medium": { "$value": 500, "$description": "Medium emphasis" },
    "semibold": { "$value": 600, "$description": "Strong emphasis, subheadings" },
    "bold": { "$value": 700, "$description": "Headings, CTAs" }
  },

  "lineHeight": {
    "$type": "number",
    "$description": "Line height scale",

    "none": { "$value": 1 },
    "tight": { "$value": 1.25, "$description": "Headings" },
    "snug": { "$value": 1.375 },
    "normal": { "$value": 1.5, "$description": "Body text" },
    "relaxed": { "$value": 1.625, "$description": "Long-form content" },
    "loose": { "$value": 2 }
  },

  "letterSpacing": {
    "$type": "dimension",
    "$description": "Letter spacing scale",

    "tighter": { "$value": "-0.05em" },
    "tight": { "$value": "-0.025em", "$description": "Large headings" },
    "normal": { "$value": "0em" },
    "wide": { "$value": "0.025em" },
    "wider": { "$value": "0.05em" },
    "widest": { "$value": "0.1em", "$description": "Uppercase labels" }
  },

  "typography": {
    "$type": "typography",
    "$description": "Composite typography styles",

    "heading": {
      "h1": {
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.4xl}",
          "fontWeight": "{fontWeight.bold}",
          "lineHeight": "{lineHeight.tight}",
          "letterSpacing": "{letterSpacing.tight}"
        }
      },
      "h2": {
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.3xl}",
          "fontWeight": "{fontWeight.semibold}",
          "lineHeight": "{lineHeight.tight}",
          "letterSpacing": "{letterSpacing.tight}"
        }
      },
      "h3": {
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.2xl}",
          "fontWeight": "{fontWeight.semibold}",
          "lineHeight": "{lineHeight.snug}",
          "letterSpacing": "{letterSpacing.normal}"
        }
      },
      "h4": {
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.xl}",
          "fontWeight": "{fontWeight.medium}",
          "lineHeight": "{lineHeight.snug}",
          "letterSpacing": "{letterSpacing.normal}"
        }
      }
    },

    "body": {
      "large": {
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.lg}",
          "fontWeight": "{fontWeight.normal}",
          "lineHeight": "{lineHeight.relaxed}"
        }
      },
      "default": {
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.base}",
          "fontWeight": "{fontWeight.normal}",
          "lineHeight": "{lineHeight.normal}"
        }
      },
      "small": {
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.sm}",
          "fontWeight": "{fontWeight.normal}",
          "lineHeight": "{lineHeight.normal}"
        }
      }
    },

    "label": {
      "large": {
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.base}",
          "fontWeight": "{fontWeight.medium}",
          "lineHeight": "{lineHeight.none}"
        }
      },
      "default": {
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.sm}",
          "fontWeight": "{fontWeight.medium}",
          "lineHeight": "{lineHeight.none}"
        }
      },
      "small": {
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.xs}",
          "fontWeight": "{fontWeight.medium}",
          "lineHeight": "{lineHeight.none}"
        }
      }
    },

    "code": {
      "default": {
        "$value": {
          "fontFamily": "{fontFamily.mono}",
          "fontSize": "{fontSize.sm}",
          "fontWeight": "{fontWeight.normal}",
          "lineHeight": "{lineHeight.normal}"
        }
      },
      "small": {
        "$value": {
          "fontFamily": "{fontFamily.mono}",
          "fontSize": "{fontSize.xs}",
          "fontWeight": "{fontWeight.normal}",
          "lineHeight": "{lineHeight.normal}"
        }
      }
    }
  }
}
