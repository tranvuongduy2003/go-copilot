{
  "$description": "Spacing and dimension tokens based on 4px base unit",

  "spacing": {
    "$type": "dimension",
    "$description": "Consistent spacing scale (4px base unit)",

    "0": { "$value": "0rem" },
    "px": { "$value": "0.0625rem", "$description": "1px - Hairline borders" },
    "0.5": { "$value": "0.125rem", "$description": "2px" },
    "1": { "$value": "0.25rem", "$description": "4px - Minimal spacing" },
    "1.5": { "$value": "0.375rem", "$description": "6px" },
    "2": { "$value": "0.5rem", "$description": "8px - Inline elements" },
    "2.5": { "$value": "0.625rem", "$description": "10px" },
    "3": { "$value": "0.75rem", "$description": "12px - Medium-small" },
    "3.5": { "$value": "0.875rem", "$description": "14px" },
    "4": { "$value": "1rem", "$description": "16px - Default component padding" },
    "5": { "$value": "1.25rem", "$description": "20px - Medium spacing" },
    "6": { "$value": "1.5rem", "$description": "24px - Card spacing" },
    "7": { "$value": "1.75rem", "$description": "28px" },
    "8": { "$value": "2rem", "$description": "32px - Section padding" },
    "9": { "$value": "2.25rem", "$description": "36px" },
    "10": { "$value": "2.5rem", "$description": "40px - Large sections" },
    "11": { "$value": "2.75rem", "$description": "44px" },
    "12": { "$value": "3rem", "$description": "48px - Page sections" },
    "14": { "$value": "3.5rem", "$description": "56px" },
    "16": { "$value": "4rem", "$description": "64px - 2XL spacing" },
    "20": { "$value": "5rem", "$description": "80px - 3XL spacing" },
    "24": { "$value": "6rem", "$description": "96px - Hero spacing" },
    "28": { "$value": "7rem", "$description": "112px" },
    "32": { "$value": "8rem", "$description": "128px - Maximum spacing" }
  },

  "borderRadius": {
    "$type": "dimension",
    "$description": "Border radius scale",

    "none": { "$value": "0rem" },
    "sm": { "$value": "0.25rem", "$description": "4px - Badges, chips" },
    "md": { "$value": "0.5rem", "$description": "8px - Buttons, inputs (default)" },
    "lg": { "$value": "0.75rem", "$description": "12px - Cards, dialogs" },
    "xl": { "$value": "1rem", "$description": "16px - Large cards, modals" },
    "2xl": { "$value": "1.5rem", "$description": "24px - Feature sections" },
    "3xl": { "$value": "2rem", "$description": "32px" },
    "full": { "$value": "9999px", "$description": "Pills, avatars, circles" }
  },

  "borderWidth": {
    "$type": "dimension",
    "$description": "Border width scale",

    "0": { "$value": "0px" },
    "1": { "$value": "1px", "$description": "Default border" },
    "2": { "$value": "2px", "$description": "Emphasis border, focus rings" },
    "4": { "$value": "4px", "$description": "Heavy emphasis" },
    "8": { "$value": "8px", "$description": "Decorative borders" }
  },

  "zIndex": {
    "$type": "number",
    "$description": "Z-index stacking scale",

    "auto": { "$value": "auto" },
    "0": { "$value": 0 },
    "10": { "$value": 10, "$description": "Base layer" },
    "20": { "$value": 20, "$description": "Sticky elements" },
    "30": { "$value": 30, "$description": "Fixed headers" },
    "40": { "$value": 40, "$description": "Dropdowns" },
    "50": { "$value": 50, "$description": "Modals" },
    "60": { "$value": 60, "$description": "Popovers" },
    "70": { "$value": 70, "$description": "Tooltips" },
    "80": { "$value": 80, "$description": "Toasts" },
    "90": { "$value": 90, "$description": "Maximum" }
  }
}
