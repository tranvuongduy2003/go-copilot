      "foreground": { "$value": "{color.neutral.950}", "$type": "color" },
      "foreground-secondary": { "$value": "{color.neutral.700}", "$type": "color" },
      "foreground-muted": { "$value": "{color.neutral.500}", "$type": "color" },
      "card": { "$value": "oklch(1 0 0)", "$type": "color" },
      "card-foreground": { "$value": "{color.neutral.950}", "$type": "color" },
      "primary": { "$value": "{color.primary.600}", "$type": "color" },
      "primary-foreground": { "$value": "oklch(1 0 0)", "$type": "color" },
      "secondary": { "$value": "{color.secondary.100}", "$type": "color" },
      "secondary-foreground": { "$value": "{color.secondary.900}", "$type": "color" },
      "muted": { "$value": "{color.neutral.100}", "$type": "color" },
      "muted-foreground": { "$value": "{color.neutral.500}", "$type": "color" },
