      "background-secondary": { "$value": "{color.neutral.900}", "$type": "color" },
      "foreground": { "$value": "{color.neutral.50}", "$type": "color" },
      "foreground-secondary": { "$value": "{color.neutral.300}", "$type": "color" },
      "foreground-muted": { "$value": "{color.neutral.500}", "$type": "color" },
